    {
      "name": "Admin Flow",
      "item": [
        {
          "name": "shifts",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const now = new Date();",
                  "const start = new Date(now.getTime() - 5 * 60 * 1000); // 5 mins ago",
                  "const end = new Date(now.getTime() + 60 * 60 * 1000);  // +1 hour",
                  "",
                  "function hhmm(d) {",
                  "  return d.toISOString().substring(11, 16); // \"HH:MM\" UTC",
                  "}",
                  "",
                  "pm.environment.set(\"shiftDate\", now.toISOString());",
                  "pm.environment.set(\"shiftStart\", hhmm(start));",
                  "pm.environment.set(\"shiftEnd\", hhmm(end));",
                  "",
                  "console.log(\"shiftDate:\", pm.environment.get(\"shiftDate\"));",
                  "console.log(\"shiftStart:\", pm.environment.get(\"shiftStart\"));",
                  "console.log(\"shiftEnd:\", pm.environment.get(\"shiftEnd\"));"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Shift created\", () => pm.response.to.have.status(201));",
                  "",
                  "const res = pm.response.json();",
                  "const shiftId =",
                  "  res?.shift?.id ||",
                  "  res?.shift?._id ||",
                  "  res?.data?.id ||",
                  "  res?.data?._id ||",
                  "  res?.id ||",
                  "  res?._id;",
                  "",
                  "pm.environment.set(\"shiftId\", shiftId);",
                  "",
                  "console.log(\"Saved shiftId:\", shiftId);",
                  "pm.test(\"shiftId saved\", () => pm.expect(shiftId).to.be.ok);"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{adminToken}}",
                  "type": "string"
