    {
      "name": "10 - E2E Flow",
      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const now = new Date();",
                  "const runId = String(now.getTime());",
                  "const pad = (n) => n.toString().padStart(2, \"0\");",
                  "const start = new Date(now.getTime() - 5 * 60 * 1000);",
                  "const finish = new Date(now.getTime() + 60 * 60 * 1000);",
                  "pm.collectionVariables.set(\"runId\", runId);",
                  "pm.collectionVariables.set(\"newUserEmail\", `qa.user.${runId}@example.com`);",
                  "pm.collectionVariables.set(\"newUserPassword\", \"StrongPass123!\");",
                  "pm.collectionVariables.set(\"newUserName\", `QA User ${runId.slice(-6)}`);",
                  "pm.collectionVariables.set(\"shiftDate\", now.toISOString());",
                  "pm.collectionVariables.set(\"shiftStartTime\", `${pad(start.getHours())}:${pad(start.getMinutes())}`);",
                  "pm.collectionVariables.set(\"shiftFinishTime\", `${pad(finish.getHours())}:${pad(finish.getMinutes())}`);",
                  "pm.collectionVariables.set(\"locationName\", \"QA Clinic\");",
                  "pm.collectionVariables.set(\"locationAddress\", \"123 Test St\");",
                  "pm.collectionVariables.set(\"locationPostCode\", \"QA1 1QA\");",
                  "pm.collectionVariables.set(\"locationLongitude\", -0.1276);",
                  "pm.collectionVariables.set(\"locationLatitude\", 51.5072);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"status is 200\", () => pm.response.to.have.status(200));",
                  "const json = pm.response.json();",
                  "pm.test(\"user id returned\", () => pm.expect(json.user.id).to.be.a(\"string\"));",
                  "pm.collectionVariables.set(\"userId\", json.user.id);",
                  "pm.collectionVariables.set(\"registerToken\", json.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/user/register",
              "host": ["{{baseUrl}}"],
              "path": ["user", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{newUserName}}\",\n  \"email\": \"{{newUserEmail}}\",\n  \"password\": \"{{newUserPassword}}\"\n}"
            }
          }
        },
